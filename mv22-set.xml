<PropertyList include="vmx22-set.xml">

    <sim>

        <description>Bell Boeing MV-22 Osprey</description>
        <aero>mv22</aero>

        <startup>
            <splash-texture>mv22-splash.png</splash-texture>
        </startup>

        <weight n="3">
            <name>Load</name>
            <weight-lb>0</weight-lb>
            <max-lb>20000</max-lb> <!-- or 12500 lb external cargo -->
        </weight>

        <aircraft-operator>USMC</aircraft-operator>

        <help>
            <title>Bell Boeing MV-22 Osprey</title>
        </help>

        <menubar n="0">
            <default n="0">
                <menu n="10">
                    <label>MV-22 Osprey</label>
                </menu>
            </default>
        </menubar>

        <flight-recorder include="Systems/flight-recorder/flight-recorder-mv22.xml"/>

    </sim>

</PropertyList>
