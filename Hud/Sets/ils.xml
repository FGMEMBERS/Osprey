<?xml version="1.0"?>

<PropertyList>

    <!-- heading -->

    <label>
        <width>60</width>
        <height>10</height>
        <y>-10</y>
        <box>true</box>
        <format>LOC CAP</format>
        <halign>left</halign>
        <condition>
            <property>/v22/afcs/active/loc-hold</property>
        </condition>
    </label>

    <label>
        <width>60</width>
        <height>10</height>
        <y>-10</y>
        <box>true</box>
        <format>LOC ARM</format>
        <halign>left</halign>
        <condition>
            <and>
                <equals>
                    <property>/v22/afcs/active/loc-hold</property>
                    <value>nav1-hold</value>
                </equals>
                <not>
                    <property>/v22/afcs/active/loc-hold</property>
                </not>
            </and>
        </condition>
    </label>

    <!-- altitude -->

    <label>
        <width>60</width>
        <height>10</height>
        <x>60</x>
        <y>-10</y>
        <box>true</box>
        <format>G/S CAP</format>
        <halign>left</halign>
        <condition>
            <property>/v22/afcs/active/gs-hold</property>
        </condition>
    </label>

    <label>
        <width>60</width>
        <height>10</height>
        <x>60</x>
        <y>-10</y>
        <box>true</box>
        <format>G/S ARM</format>
        <halign>left</halign>
        <condition>
            <and>
                <equals>
                    <property>/v22/afcs/locks/altitude</property>
                    <value>gs1-hold</value>
                </equals>
                <not>
                    <property>/v22/afcs/active/gs-hold</property>
                </not>
            </and>
        </condition>
    </label>

</PropertyList>
