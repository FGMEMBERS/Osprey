<?xml version="1.0"?>

<PropertyList>

    <!-- heading -->

    <label>
        <width>60</width>
        <height>10</height>
        <y>-10</y>
        <box>true</box>
        <format>%s CAP</format>
        <halign>left</halign>
        <input>
            <property>/instrumentation/nav[0]/nav-id</property>
        </input>
        <condition>
            <property>/v22/afcs/active/loc-hold</property>
        </condition>
    </label>

    <label>
        <width>60</width>
        <height>10</height>
        <y>-10</y>
        <box>true</box>
        <format>LOC ARM</format>
        <halign>left</halign>
        <condition>
            <and>
                <property>/v22/afcs/locks/vor-ils</property>
                <not>
                    <property>/v22/afcs/active/loc-hold</property>
                </not>
                <not>
                    <property>/v22/afcs/active/tacan-hold</property>
                </not>
            </and>
        </condition>
    </label>

    <!-- altitude -->

    <label>
        <width>60</width>
        <height>10</height>
        <x>60</x>
        <y>-10</y>
        <box>true</box>
        <format>G/S CAP</format>
        <halign>left</halign>
        <condition>
            <property>/v22/afcs/active/gs-hold</property>
        </condition>
    </label>

    <label>
        <width>60</width>
        <height>10</height>
        <x>60</x>
        <y>-10</y>
        <box>true</box>
        <format>G/S ARM</format>
        <halign>left</halign>
        <condition>
            <and>
                <property>/v22/afcs/locks/vor-ils</property>
                <property>/instrumentation/nav[0]/has-gs</property>
                <not>
                    <property>/v22/afcs/active/gs-hold</property>
                </not>
            </and>
        </condition>
    </label>

</PropertyList>
