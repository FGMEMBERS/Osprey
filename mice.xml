<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

    <mouse n="0">
        <mode n="1">
            <button n="1">
                <binding>
                    <command>nasal</command>
                    <script>v22.set_tilt_rate(0)</script>
                </binding>
            </button>

            <button n="3">
                <binding>
                    <command>property-adjust</command>
                    <property>/controls/flight/fbw/target/tilt-rate</property>
                    <step type="double">1.0</step>
                    <max type="double">8.0</max>
                </binding>
            </button>

            <button n="4">
                <binding>
                    <command>property-adjust</command>
                    <property>/controls/flight/fbw/target/tilt-rate</property>
                    <step type="double">-1.0</step>
                    <min type="double">-8.0</min>
                </binding>
            </button>
        </mode>
    </mouse>

</PropertyList>
