<?xml version="1.0" encoding="UTF-8"?>

<!-- VMX22 Osprey simulation config -->

<PropertyList>

    <sim include="Nasal/views.xml">

        <author>BARANGER Emmanuel (3D), Maik Justus (FDM), Oliver Thurau (3D upgrade and FDM / XML upgrade)</author>
        <status>alpha</status>
        <aircraft-version>0.59-28.08.2010</aircraft-version>
    
        <flight-model>yasim</flight-model>
        <fuel-fraction>0.8</fuel-fraction>

        <startup>
            <splash-texture>Aircraft/VMX22-Osprey/vmx22-splash.png</splash-texture>
        </startup>

        <sound>
            <path>Aircraft/VMX22-Osprey/Sounds/v22-sound.xml</path>
        </sound>

        <model>
            <path archive="y">Aircraft/VMX22-Osprey/Models/v22.xml</path>
            
            <livery>
                <file type="string">default</file>
            </livery>
        
            <v22>
                <immat>false</immat>
                <state type="int">0</state>
                <wing_state type="int">0</wing_state>
                <blade_folding type="float">0</blade_folding>
                <wing_rotation type="float">0</wing_rotation>
                <tilt type="float">0</tilt>
                <animation_tilt type="float">0</animation_tilt>
                <inputflaps type="float">0</inputflaps>
                <inputtilt type="float">0</inputtilt>
                <wingfoldincidence type="float">0</wingfoldincidence>

                <wing>
                    <elevator type ="float">0</elevator>
                    <aileron type="float">0</aileron>
                    <rudder type="float">0</rudder>
                    <flap type="float">0</flap>
                </wing>

                <rotor>
                    <left>
                        <elevator type="float">0</elevator>
                        <collective type="float">0</collective>
                    </left>
                    <right>
                        <elevator type="float">0</elevator>
                        <collective type="float">0</collective>
                    </right>
                </rotor>
                
                <engine_right type="float">0.0</engine_right>
                <engine_left type="float">0.0</engine_left>
                <rotor-step-deg type="float">-1.0</rotor-step-deg>
                <solver_throttle type="float">0</solver_throttle>
                <wing_rotation_speed type ="float">0</wing_rotation_speed>
                <flap_speed type="float">0</flap_speed>
                <blade_folding_speed type="float">0</blade_folding_speed>
                <animation_tilt_speed type="float">0</animation_tilt_speed>
        
                <flight_computer>
                    <roll>
                        <p type="float">1</p>
                        <i type="float">0</i>
                        <d type="float">1</d>
                        <target_abs type="float">0.004</target_abs>
                        <target_rate type="float">0.0015</target_rate>
                        <max_i type="float">0.5</max_i>
                        <out type="float">0</out>
                        <enabled type="int">1</enabled>
                        <last_delta type="float">0</last_delta>
                        <integral type="float">0</integral>
                    </roll>
                    <pitch>
                        <p type="float">1</p>
                        <i type="float">0</i>
                        <d type="float">130</d>
                        <target_abs type="float">-0.01</target_abs>
                        <target_rate type="float">0.0001</target_rate>
                        <max_i type="float">0.5</max_i>
                        <out type="float">0</out>
                        <enabled type="int">1</enabled>
                        <last_delta type="float">0</last_delta>
                        <integral type="float">0</integral>
                    </pitch>
                </flight_computer>
            </v22>
        
            <!-- set for landing lights OFF (0 default) on startup <property>sim/model/lights/landing-lights/state</property> -->
            <!-- set for GIT landing lights OFF (0 default) on startup <property>sim/model/lights/git-landing-lights/state</property> -->
            <!-- change state to 1 - to globaly set the GIT landing lights to ON for all mp vmx22 -->
            <lights>
                <landing-lights>
                    <state type="int">0</state>
                </landing-lights>
                <git-landing-lights>
                    <state type="int">0</state>
                </git-landing-lights>
            </lights>
        </model>

        <multiplay>
            <generic>
                <float n="0"/>
                <float n="1"/>
                <float n="2"/>
                <float n="3"/>
                <float n="4"/> <!-- door mp - cargodoormix - down -->
                <float n="5"/> <!-- door mp - cargodoorup -->
                <float n="6"/> <!-- door mp - airrefuel -->
                <float n="7"/> <!-- door mp - cockpit -->
                <float n="8"/> <!-- door mp - crew -->
                <float n="9"/> <!-- door mp - crewup -->
                <float n="10"/> <!-- gear agl meter mp - rotor particles animation -->
                <float n="11"/> <!-- front gear caster mp - gear[0]/caster-angle-deg rotation animation -->
                <float n="13"/> <!-- collective left mp - rotor particles animation -->
                <float n="14"/> <!-- collective right mp - rotor particles animation -->
                <float n="15"/> <!-- landing lights animation mp - landing lights model position -->
                <float n="16"/> <!-- pushback animation mp - position -->
                <float n="17"/> <!-- Front gear A spin mp - gear[0]/rollspeed-ms -->
                <float n="18"/> <!-- Left gear G spin mp - gear[1]/rollspeed-ms -->
                <float n="19"/> <!-- Right gear D spin mp - gear[2]/rollspeed-ms -->
                <int n="10"/> <!-- landing lights state mp -->
                <int n="11"/> <!-- pushback state mp -->
                <int n="12"/> <!-- paratrooper jump state mp -->
            </generic>
        </multiplay>
    
        <weight n="0">
            <name>Pilot</name>
            <weight-lb>180</weight-lb>
            <max-lb>300</max-lb>
        </weight>

        <weight n="1">
            <name>Co-Pilot</name>
            <weight-lb>180</weight-lb>
            <max-lb>300</max-lb>
        </weight>

        <weight n="2">
            <name>Cabin Crew</name>
            <weight-lb>0</weight-lb>
            <max-lb>300</max-lb>
        </weight>

        <checklists include="v22-checklists.xml"/>

        <submodels>
            <serviceable type="bool">true</serviceable>
            <path>Aircraft/VMX22-Osprey/Submodels/submodels.xml</path>
        </submodels>

        <help>
            <key>
                <name>}</name>
                <desc>Start Engines</desc>
            </key>
            <key>
                <name>{</name>
                <desc>Stop Engines</desc>
            </key>
            <key>
                <name>m</name>
                <desc>Tilt rotors forward by 10 degrees</desc>
            </key>
            <key>
                <name>M</name>
                <desc>Tilt rotors backward by 10 degrees</desc>
            </key>
            <key>
                <name>Alt-m</name>
                <desc>Tilt rotors vertical</desc>
            </key>
            <key>
                <name>n</name>
                <desc>Unfold wing</desc>
            </key>
            <key>
                <name>N</name>
                <desc>Fold wing</desc>
            </key>
            <key>
                <name>e</name>
                <desc>Open/Close cockpit door</desc>
            </key>
            <key>
                <name>d</name>
                <desc>Open/Close starboard door upper part</desc>
            </key>
            <key>
                <name>D</name>
                <desc>Open/Close starboard door lower part</desc>
            </key>
            <key>
                <name>c</name>
                <desc>Open/Close cargo door upper part</desc>
            </key>
            <key>
                <name>s</name>
                <desc>Open/Close cargo door lower part</desc>
            </key>
            <key>
                <name>f</name>
                <desc>Aerial refueling probe</desc>
            </key>
            <key>
                <name>Ctrl-j</name>
                <desc>Deploy paratroopers</desc>
            </key>
            <key>
                <name>Ctrl-o</name>
                <desc>Find aircraft to tow</desc>
            </key>
            <key>
                <name>o</name>
                <desc>Lock tow hook</desc>
            </key>
            <key>
                <name>O</name>
                <desc>Open tow hook</desc>
            </key>
            <text>The tilt range is from -10 degrees to 0 degrees (vertical) to 90 degrees (horizontal). The allowed tilt range is a function of the aircraft's speed. The flight computer limits the actual tilt to this range. Therefore you can lift of with vertical rotors and accelerate like a helicopter. The computer will increase the tilt with increasing airspeed. For faster acceleration set the tilt to the maximum.

The Osprey can hover within a range of -10 degrees to 30 degrees. You can set the tilt to 90 degrees (horizontal) on ground. However, due to the lack of speed the tilt is limited to a maximum of 30 degrees.</text>
        </help>

        <flaps>
            <setting>0.00</setting> <!-- Cruise -->
            <setting>0.33</setting> <!--  -->
            <setting>0.66</setting> <!--  -->
            <setting>1.00</setting> <!-- Full -->
        </flaps>
    
        <hitches>
            <!-- Make sure some properties do exist, when the list for multiplayer transfer is defined -->
            <!-- They need to be in the same value, as they are initilized in the FDM, to get the same values after reset should fix this somehow -->
            <aerotow>
                <tow>
                    <length type="float">30</length>
                    <elastic-constant type="float">10000</elastic-constant>
                    <weight-per-m-kg-m type="float">0.035</weight-per-m-kg-m>
                    <dist type="float">1</dist>
                    <connected-to-property-node type="bool"/>
                    <brake-force type="float">100000</brake-force>
                    <connected-to-ai-or-mp-callsign type ="string">*</connected-to-ai-or-mp-callsign>
                    <end-force-x type ="float">0</end-force-x>
                    <end-force-y type ="float">0</end-force-y>
                    <end-force-z type ="float">0</end-force-z>
                </tow>
                <speed-in-tow-direction type="float">0</speed-in-tow-direction>
                <open type="bool">true</open>
                <local-pos-x type="float">0</local-pos-x>
                <local-pos-y type="float">0</local-pos-y>
                <local-pos-z type="float">0</local-pos-z>
                <is-slave type="bool">false</is-slave>
            </aerotow>
        </hitches>

        <menubar include="Dialogs/v22-menu.xml"/>

    </sim>

    <input>
        <keyboard include="Nasal/v22-keyboard.xml"/>
    </input>

    <controls>
        <aerotow>
            <find-aircraft type="bool">false</find-aircraft>
        </aerotow> 
    </controls>

    <rotors>
        <main>
            <rpm type="double">0</rpm>
            <blade>
                <position-deg type="float">0</position-deg>
                <incidence-deg type="float">0</incidence-deg>
            </blade>
        </main>
        <tail>
            <rpm type="double">0</rpm>
            <blade>
                <position-deg type="float">0</position-deg>
                <incidence-deg type="float">0</incidence-deg>
            </blade>
        </tail>
    </rotors>

    <surface-positions>
        <flap-pos-norm type="float">0</flap-pos-norm>
    </surface-positions>
  
    <ai>
        <submodels>
            <trigger type="bool">false</trigger>
        </submodels>
    </ai>

    <gear>
        <gear n="0">
            <tyre-smoke type="int">0</tyre-smoke>
            <sprayspeed-ms type="double">0</sprayspeed-ms>
            <spray-density type="double">0</spray-density>
            <caster-angle-deg-damped type="double">0</caster-angle-deg-damped>
        </gear>
        <gear n="1">
            <tyre-smoke type="int">0</tyre-smoke>
            <sprayspeed-ms type="double">0</sprayspeed-ms>
            <spray-density type="double">0</spray-density>
        </gear>
        <gear n="2">
            <tyre-smoke type="int">0</tyre-smoke>
            <sprayspeed-ms type="double">0</sprayspeed-ms>
            <spray-density type="double">0</spray-density>
        </gear>
    </gear>
  
    <nasal>
        <v22>
            <file>Aircraft/VMX22-Osprey/Nasal/v22.nas</file>
            <!-- <file>Aircraft/VMX22-Osprey/Nasal/terrain_under.nas</file> -->
            <file>Aircraft/VMX22-Osprey/Nasal/tyresmoke.nas</file>
            <file>Aircraft/VMX22-Osprey/Nasal/immat.nas</file>
            <file>Aircraft/VMX22-Osprey/Nasal/light.nas</file>
            <file>Aircraft/VMX22-Osprey/Nasal/liveries.nas</file>
        </v22>
        <doors>
            <file>Aircraft/VMX22-Osprey/Nasal/doors.nas</file>
        </doors>
    </nasal>

    <consumables>
        <fuel>
            <tank n="0"><name>Left Forward Sponson</name></tank>
            <tank n="1"><name>Right Forward Sponson</name></tank>
            <tank n="2"><name>Left Wing Feeder</name></tank>
            <tank n="3"><name>Right Wing Feeder</name></tank>
            <tank n="4"><name>Right Aft Sponson</name></tank>
            <tank n="5"><name>Optional MATS no. 1</name></tank>
            <tank n="6"><name>Optional MATS no. 2</name></tank>
            <tank n="7"><name>Optional MATS no. 3</name></tank>
        </fuel>
    </consumables>

</PropertyList>
