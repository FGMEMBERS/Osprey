                </text>
            </group>

            <empty><stretch>true</stretch></empty>
        </group>
    </group>

    <!-- Limits -->
    <group>
        <layout>table</layout>
        <halign>center</halign>

        <!-- Gross Weight -->
        <text>
            <row>0</row>
            <col>0</col>
            <halign>right</halign>
            <label>Gross Weight:</label>
        </text>
        <text>
            <row>0</row>
            <col>1</col>
            <halign>left</halign>
            <label>0123457890123456789</label>
            <format>%.0f lbs</format>
            <property>/yasim/gross-weight-lbs</property>
            <live>true</live>
        </text>

        <!-- Max. Takeoff  Weight -->
        <text>
            <row>1</row>
            <col>0</col>
            <halign>right</halign>
            <label>Max. Takeoff  Weight:</label>
        </text>
        <text>
            <row>1</row>
            <col>1</col>
            <halign>left</halign>
            <label>0123457890123456789</label>
            <format>%.0f lbs</format>
            <property>/limits/mass-and-balance/maximum-takeoff-mass-lbs</property>
            <live>true</live>
        </text>
    </group>

    <hrule/>

    <group>
        <layout>hbox</layout>
        <default-padding>6</default-padding>

        <empty><stretch>true</stretch></empty>

        <button>
            <legend>Close</legend>
            <default>true</default>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>

</PropertyList>
