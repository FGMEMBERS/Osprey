<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

    <default>
        <menu n="10">
            <label>V22 Osprey</label>
            <enabled type="bool">true</enabled>
            
            <item>
                <label>Select Livery</label>
                <binding>
                    <command>nasal</command>
                    <script>aircraft.livery.dialog.toggle()</script>
                </binding>
            </item>

            <item>
                <label>Blades Visible</label>
                <binding>
                    <command>nasal</command>
                    <script>
                        var p = "rotors/main/bladesvisible";
                        setprop(p, var i = !getprop(p));
                        gui.popupTip("Blades visible " ~ (i ? "On" : "Off"));
                    </script>
                </binding>
            </item>

            <item>
                <label>GIT-Zan Landing Lights</label>
                <binding>
                    <command>nasal</command>
                    <script>
                        var p = "sim/model/lights/git-landing-lights/state";
                        setprop(p, var i = !getprop(p));
                        gui.popupTip("GIT-Zan landing lights visible " ~ (i ? "On" : "Off"));
                    </script>
                </binding>
            </item>

            <item>
                <label>Immatriculation</label>
                <binding>
                    <command>nasal</command>
                    <script>v22.immat_dialog.toggle()</script>
                </binding>
            </item>

            <item>
                <label>Find Aircraft to Tow</label>
                <binding>
                    <command>property-assign</command>
                    <property>controls/aerotow/find-aircraft</property>
                    <value type="bool">true</value>
                </binding>
                <mod-up>
                    <binding>
                        <command>property-assign</command>
                        <property>controls/aerotow/find-aircraft</property>
                        <value type="bool">false</value>
                    </binding>
                </mod-up>
            </item>

            <item>
                <label>Lock Tow Hook</label>
                <binding>
                    <command>property-assign</command>
                    <property>sim/hitches/aerotow/open</property>
                    <value type="bool">false</value>
                </binding>
            </item>

            <item>
                <label>Open Tow Hook</label>
                <binding>
                    <command>property-assign</command>
                    <property>sim/hitches/aerotow/open</property>
                    <value type="bool">true</value>
                </binding>
            </item>
    
            <item>
                <label>Pushback</label>
                <binding>
                    <command>dialog-show</command>
                    <dialog-name>pushback</dialog-name>
                </binding>
            </item>
        </menu>
    </default>

</PropertyList>

